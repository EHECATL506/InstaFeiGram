@model InstaFeiGram.Models.Foto

@{
    ViewData["Title"] = "Editar Datos Img";
}

<h2>Editar Datos</h2>

<h4>Datos de la Foto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idfoto" />
            <div class="form-group">
          
                <input asp-for="rutaimagen" type="hidden" readonly="readonly" />
                <span asp-validation-for="rutaimagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="titulo" class="control-label"></label>
                <input asp-for="titulo" class="form-control" />
                <span asp-validation-for="titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="resumen" class="control-label"></label>
                <input asp-for="resumen" class="form-control" />
                <span asp-validation-for="resumen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tag" class="control-label"></label>
                <input asp-for="tag" class="form-control" />
                <span asp-validation-for="tag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechasubida" class="control-label"></label>
                <input asp-for="fechasubida" class="form-control"  type="hidden" readonly="readonly" />
                <span asp-validation-for="fechasubida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

            <input asp-for="grises" hidden />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar al indice</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
